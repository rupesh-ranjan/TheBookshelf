@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            @* <input asp-for="Id" hidden /> *@
            <div class="border p-3 mt-4">
                @*  <div asp-validation-summary="All"></div> *@

                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Title" class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="ISBN" class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Author" class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="ListPrice" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Price" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Price50" class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Price100" class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control text-white">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



