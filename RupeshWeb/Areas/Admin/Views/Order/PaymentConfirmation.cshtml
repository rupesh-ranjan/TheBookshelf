@model int

<div class="container row pt-4">
    <div class="col-12 text-center flex">
        <h1 class="text-white text-center">Payment Successful!</h1>
        Your Order Number is : @Model <br/><br/>
        <img src="~/images/thanks.png" />
    </div>
    <div class="col-12 text-center" style="color:#96c116">
        <br />
        Payment has been applied successfully! <br/>
        <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" class="btn btn-secondary">.
            Back to Order Details
        </a>
    </div>

</div> 